
(
    // --- Секция ограничений пользователя ---
    user: (
        // Максимальная длина имени пользователя
        name_len: 15, // Увеличим немного, чтобы имя могло быть длиннее
        // Максимальная общая длина всех никнеймов
        global_nickname_len: 20, //  Увеличим, если никнеймы могут быть длинными
        // Максимальная общая длина произношений всех никнеймов
        global_nickname_pronounce_len: 30, //  Увеличим, если произношения важны и могут быть длинными
        // Максимальное количество предыдущих никнеймов
        prevision_nicknames_max_count: 5, //  Разрешим больше предыдущих никнеймов
        // Разрешены ли предыдущие никнеймы вообще
        prevision_nicknames_allowed: true, // Включим, чтобы показать, как это работает
    ),
    // Разрешена ли секция пользователя целиком?
    user_section_allowed: true,

    // --- Секция ограничений специальностей ---
    specifications_count: (
        5,  // Максимальное количество специальностей
        80, // Максимальная длина каждой специальности
    ),
    // Разрешена ли секция специальностей целиком?
    specification_section_allowed: false,

    // --- Секция ограничений "О себе" ---
    about: 250, // Максимальная длина текста "О себе", увеличено
    // Разрешена ли секция "О себе" целиком?
    about_section_allowed: false,

    // --- Секция ограничений репозиториев ---
    repositories: (
        5,  // Максимальное количество репозиториев
        20, // Максимальная длина названия репозитория
    ),
    // Разрешена ли секция репозиториев целиком?
    repositories_section_allowed: false,

    // --- Секция ограничений социальных сетей ---
    socials: 3, // Максимальное количество социальных ссылок, увеличено
    // Разрешена ли секция социальных сетей целиком?
    socials_section_allowed: false,

    // --- Секция ограничений навыков ---
    skills: (
        5,  // Максимальное количество навыков
        (   // Ограничения для каждого навыка (SkillLimitation)
            skill_len: 30, // Максимальная длина названия навыка, увеличено
            projects: Some(( // Ограничения на проекты внутри навыка, сделаем Option::Some
                3,  // Максимальное количество проектов для каждого навыка
                25, // Максимальная длина названия проекта внутри навыка
            )),
            since: true, // Разрешено ли поле "since" (период использования навыка)
            main: true,  // Разрешено ли поле "main" (основной навык)
            repo_link: true, // Разрешена ли ссылка на репозиторий для навыка
        )
    ),
    // Разрешена ли секция навыков целиком?
    skills_section_allowed: false,
)
