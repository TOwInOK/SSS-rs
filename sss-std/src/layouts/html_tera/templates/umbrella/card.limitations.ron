        2,  // Максимальное количество навыков
        (   // Ограничения для каждого навыка (SkillLimitation)
            skill_len: 12, // Максимальная длина названия навыка, увеличено
            projects: None,
            since: true, // Разрешено ли поле "since" (период использования навыка)
            main: true,  // Разрешено ли поле "main" (основной навык)
            repo_link: true, // Разрешена ли ссылка на репозиторий для навыка
        )
    ),
)
