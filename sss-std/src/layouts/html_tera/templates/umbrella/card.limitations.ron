(
    // --- Секция ограничений пользователя ---
    user: Some(( // Оборачиваем в Some, так как user: Option<UserLimitations>
        // Максимальная длина имени пользователя
        name_len: 8, // Увеличим немного, чтобы имя могло быть длиннее
        // Максимальная общая длина всех никнеймов
        global_nickname_len: 8, //  Увеличим, если никнеймы могут быть длинными
        // Максимальная общая длина произношений всех никнеймов
        global_nickname_pronounce_len: 12, //  Увеличим, если произношения важны и могут быть длинными
        // Максимальное количество предыдущих никнеймов
        prevision_nicknames_max_count: 0, //  Разрешим больше предыдущих никнеймов
    )),

    // --- Секция ограничений специальностей ---
    specifications_count: ( // Оставляем как есть, tuple (usize, usize)
            // Если 0, то секция отключенна
        3,  // Максимальное количество специальностей
        20, // Максимальная длина каждой специальности
    ),

    // --- Секция ограничений "О себе" ---
    about: Some(120), // Оборачиваем в Some, так как about: Option<usize> // Максимальная длина текста "О себе", увеличено

    // --- Секция ограничений репозиториев ---
    repositories: ( // Оставляем как есть, tuple (usize, usize)
            // Если 0, то секция отключенна
        2,  // Максимальное количество репозиториев
        20, // Максимальная длина названия репозитория
    ),

    // --- Секция ограничений социальных сетей ---
                // Если 0, то секция отключенна
    socials: Some(2), // Оборачиваем в Some, так как socials: Option<usize> // Максимальное количество социальных ссылок, увеличено

    // --- Секция ограничений навыков ---
    skills: ( // Оставляем как есть, tuple (usize, SkillLimitation)
